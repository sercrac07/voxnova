{
  "name": "voxnova",
  "version": "0.0.1",
  "description": "A new voice for your applications - modern internationalization made simple.",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.cts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsdown",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "biome lint src test",
    "lint:fix": "biome lint --fix src test",
    "format": "biome format src test",
    "format:fix": "biome format --fix src test",
    "typecheck": "tsc --noEmit",
    "check": "npm run test && npm run lint && npm run format && npm run typecheck",
    "prepublishOnly": "npm run build && npm run check",
    "release": "npm run prepublishOnly && npm publish"
  },
  "keywords": [
    "internationalization",
    "i18n",
    "pluralization",
    "localization",
    "l10n",
    "translation",
    "enum",
    "typescript"
  ],
  "author": {
    "name": "Sergio Casado",
    "email": "sercassan@gmail.com",
    "url": "https://github.com/sercrac07"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sercrac07/voxnova.git"
  },
  "bugs": {
    "url": "https://github.com/sercrac07/voxnova/issues"
  },
  "homepage": "https://github.com/sercrac07/voxnova#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@types/node": "25.2.0",
    "tsdown": "0.20.1",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  }
}
